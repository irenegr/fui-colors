    font_name = "Bold"
}

style "notify-progressbar" {
    xthickness   = 1
    ythickness   = 1

    bg[NORMAL]   = "#ECEDEE"
	bg[ACTIVE] = "#ECEDEE"
    bg[SELECTED] = "#ECEDEE"

    fg[PRELIGHT] = "#78797A"
    fg[ACTIVE] = "#78797A"
    fg[SELECTED] = "#78797A"

    engine "murrine" {
        gradient_shades = { 1.0, 1.0, 1.0, 1.0 }
        border_shades = { 1.0, 1.0 }
		trough_shades = { 1.0, 1.0 }
		trough_border_shades = { 1.0, 1.0 }
        progressbarstyle = 0
        roundness = 2
        textstyle = 0
    }
}

