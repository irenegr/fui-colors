    GtkWidget::link-color = "#d64937"

    fg[NORMAL] = "#78797A"
    fg[PRELIGHT] = "#78797A"
    fg[ACTIVE] = "#78797A"

    engine "murrine" {
        textstyle = 0
    }
}

